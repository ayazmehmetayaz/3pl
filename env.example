# Database Configuration
DATABASE_URL=postgresql://ayaz_user:ayaz_password@localhost:5432/ayaz_erp
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ayaz_erp
POSTGRES_USER=ayaz_user
POSTGRES_PASSWORD=ayaz_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_URL=amqp://ayaz_user:ayaz_password@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=ayaz_user
RABBITMQ_PASSWORD=ayaz_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=3001
API_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# External APIs
EFATURA_API_URL=https://efatura-test.turkiye.gov.tr
EFATURA_USERNAME=your-efatura-username
EFATURA_PASSWORD=your-efatura-password

BANK_API_URL=https://api.bank.com
BANK_CLIENT_ID=your-bank-client-id
BANK_CLIENT_SECRET=your-bank-client-secret

# GPS Tracking
GPS_API_URL=https://api.gps-provider.com
GPS_API_KEY=your-gps-api-key

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Mobile App
MOBILE_API_KEY=your-mobile-api-key
FIREBASE_SERVER_KEY=your-firebase-server-key
